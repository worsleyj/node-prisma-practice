generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String
  isAdmin  Boolean
  settings Json
  blob     Bytes
  Message  Message[]
}

model Message {
  messageId String   @id @default(uuid())
  rating    Float
  createdAt DateTime
  updatedAt DateTime
  author    User     @relation(fields: [userId], references: [id])
  userId    String
}
